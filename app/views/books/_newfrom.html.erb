      <h2 class="mt-3">New book</h2>
        <div class="form-group">
          <%= form_with model: book, local:true do |f| %>
            <div class="form-group">
              <p>Title</p>
              <%= f.text_field :title %>
            </div>
            <div class="form-group">
              <p>Opinion</p>
              <%= f.text_area :body %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book' %>
            </div>
          <% end %>
        </div>