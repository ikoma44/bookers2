<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <% if user_signed_in? %>
               <!--login時-->
              <ul class="nav navbar-nav ml-auto">
                <li>
                  <div class="fas fa-home nav-link text-light">
                    <%= link_to "Home", user_path(current_user.id) %>
                  </div>
                </li>
                <li>
                  <div class="fas fa-users nav-link text-light">
                    <%= link_to "Users", users_path %>
                  </div>
                </li>
                <li>
                  <div class="fas fa-book-open nav-link text-light" >
                    <%= link_to "Books", books_path %>
                  </div>
                </li>
                <li>
                  <div class="fas fa-sign-out-alt nav-link text-light" >
                    <%= link_to "logout", destroy_user_session_path, method: :delete %>
                  </div>
                </li>
              </ul>
              <% else %>
                <!--logout時-->
                <ul class="navbar-nav ml-auto">
                  <li>
                    <div class="fas fa-home nav-link text-light">
                     <%= link_to "Home", root_path %>
                    </div>
                  </li>
                  <li>
                    <div class="fas fa-link nav-link text-light" >
                      <%= link_to "About", home_about_path %>
                    </div>
                  </li>
                  <li>
                    <div class="fas fa-user-plus nav-link text-light" >
                      <%= link_to "Sign up", new_user_registration_path %>
                    </div>
                  </li>
                  <li>
                    <div class="fas fa-sign-in-alt nav-link text-light" >
                      <%= link_to "login", new_user_session_path %>
                    </div>
                  </li>
                </ul>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </haeder>

    <%= flash[:notice] %>
    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
